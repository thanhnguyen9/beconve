<div>
  <div class="section location-section">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-block">
              <div class="section">
                <div class="container">
                  <div class="row">
                    <div class="add-margin"></div>
                    <h1 class="text-center">Sign up as <%= params[:user][:role] %></h1>
                    <div class="col-md-offset-3 col-md-6">

                      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

                          <br>
                          <% devise_error_messages1!.each do |error| %>
                            <li><%= error %></li>
                          <%end%>
                          <br>

                          <div class="field">
                            <%= f.label :email %><br />
                            <%= f.email_field :email, autofocus: true, class: 'form-control input-lg', :required => true %>
                          </div>

                          <div class="field">
                            <%= f.label :password %>
                            <% if @minimum_password_length %>
                                <em>(<%= @minimum_password_length %> characters minimum)</em>
                            <% end %><br />
                            <%= f.password_field :password, autocomplete: "off", class: 'form-control input-lg', :required => true %>
                          </div>

                          <div class="field">
                            <%= f.label :password_confirmation %><br />
                            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control input-lg', :required => true %>
                          </div>


                          <%= f.hidden_field 'role', value: params[:user][:role]  %>

                          <br>
                          <div class="actions">
                            <%= f.submit "Sign up", class:'btn btn-success' %>
                          </div>
                      <% end %>

                      <%= render "devise/shared/links" %>

                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>